---
const productos = [
  { nombre: "Lechona Tradicional", desc: "Arroz, carne de cerdo y cuero crocante.", precio: "$15.000", tag: "Popular" },
  { nombre: "Tamal con Lechona", desc: "La combinación perfecta del Tolima.", precio: "$18.000", tag: "Nuevo" },
  { nombre: "Cojín de Lechona", desc: "Para eventos grandes (10-15 personas).", precio: "$120.000", tag: "Evento" },
];
---
<section id="productos" class="py-20 reveal">
  <h2 class="text-4xl md:text-6xl font-black mb-12 uppercase italic">Nuestros <span class="text-orange-500">Manjares</span></h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    {productos.map(p => (
      <div class="bg-zinc-50 p-3 rounded-[2.5rem] border border-zinc-200 hover:shadow-2xl transition-all group">
        <div class="h-64 bg-zinc-200 rounded-[2rem] overflow-hidden relative">
            <img src="https://images.unsplash.com/photo-1544025162-d76694265947?auto=format&fit=crop&q=80&w=600" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" /> [cite: 98]
            <span class="absolute top-4 left-4 bg-orange-500 text-white text-xs font-bold px-3 py-1 rounded-full uppercase">{p.tag}</span>
        </div>
        <div class="p-6">
          <h3 class="text-2xl font-bold">{p.nombre}</h3>
          <p class="text-zinc-500 text-sm mt-2 mb-4">{p.desc}</p>
          <div class="flex justify-between items-center">
            <span class="text-xl font-black text-orange-500">{p.precio} [cite: 99]</span>
            <button class="text-sm font-bold underline uppercase tracking-tighter">Añadir +</button>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>